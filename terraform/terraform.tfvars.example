# Terraform Variables Configuration
# העתק את הקובץ הזה ל-terraform.tfvars וערוך את הערכים

# ===========================================
# הגדרות בסיסיות - חובה לערוך!
# ===========================================

# מיקום גיאוגרפי של המשאבים
# אפשרויות מומלצות לישראל:
# - "West Europe" (הכי קרוב - אמסטרדם)
# - "East US" (חלופה טובה)
# - "Southeast Asia" (סינגפור)
location = "West Europe"

# ===========================================
# תגיות למעקב ועלויות
# ===========================================
tags = {
  # סביבת הפיתוח
  Environment = "Development"    # או "Production", "Staging"
  
  # פרטי הפרויקט
  Project     = "WeatherAPI"
  Application = "weather-service"
  
  # פרטים אישיים/ארגוניים
  Owner       = "YourName"       # החלף עם השם שלך
  Email       = "your.email@domain.com"  # החלף עם המייל שלך
  Department  = "Engineering"    # המחלקה שלך
  Team        = "DevOps"         # הצוות שלך
  
  # ניהול עלויות
  CostCenter  = "R&D"          # מרכז עלות
  Budget      = "development"   # תקציב
  
  # מידע טכני
  ManagedBy   = "Terraform"
  Repository  = "weather-api-aks"
  
  # תאריך יצירה (אוטומטי - אל תשנה)
  CreatedDate = "2025-01-01"
}

# ===========================================
# הגדרות מתקדמות (אופציונליות)
# ===========================================

# אם תרצה לעקוף את השמות האוטומטיים
# resource_prefix = "mycompany"

# הגדרות רשת מתקדמות
# enable_private_cluster = false
# authorized_ip_ranges = ["YOUR_IP/32"]

# ===========================================
# הערות שימושיות
# ===========================================

# מיקומים נפוצים ומרחקים מישראל:
# - West Europe (אמסטרדם): ~3,300 ק"מ - הכי קרוב
# - East US (וירג'יניה): ~8,900 ק"מ - מהיר וזול
# - North Europe (אירלנד): ~3,800 ק"מ - חלופה לאמסטרדם
# - Central US (איווה): ~10,200 ק"מ - זול אבל רחוק
# - Southeast Asia (סינגפור): ~6,400 ק"מ - טוב לאסיה

# התגיות חשובות למעקב עלויות ב-Azure Cost Management!
# הן מאפשרות לך לראות כמה כל פרויקט עולה.
